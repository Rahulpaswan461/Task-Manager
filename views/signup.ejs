<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home Page</title>
</head>
<body>
    <%- include('./partials/nav') %>

      <div class="container" style="margin-top: 2rem;">
        <form action="/user/signup" method="POST">
        <div class="row" style="display: flex;flex-direction: column;">
            <div class="col" style="margin-top: 5rem;">
              <input type="text" class="form-control" name="fullName" placeholder="First name" aria-label="First name">
            </div><br>
            <div class="col">
              <input type="text" class="form-control" name="email" placeholder="Email" aria-label="Last name">
            </div><br>
            <div class="col">
                <input type="password" name="password" class="form-control"  placeholder="At least 8 character's" aria-label="Last name">
              </div>
          </div><br><br>
          <div class="col-12">
            <button type="submit" class="btn btn-primary">Sign Up</button>
          </div>
        </form>
      </div>
    


    <%- include('./partials/script') %>
</body>
</html>